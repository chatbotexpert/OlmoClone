// SmoothScroll.astro
---

<script>
  import Lenis from '@studio-freight/lenis';
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initLenis() {
    if ((window as any).lenisInstance) {
      (window as any).lenisInstance.destroy();
    }

    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
      wheelMultiplier: 1,
    });

    (window as any).lenisInstance = lenis;

    // Sync Lenis scrolling with GSAP Scrolltrigger
    lenis.on('scroll', ScrollTrigger.update);

    // raf function removed because it was unused and replaced by gsap.ticker below
    
    // Merge GSAP ticker and Lenis RAF to avoid jittering
    gsap.ticker.add((time)=>{
      lenis.raf(time * 1000)
    })

    gsap.ticker.lagSmoothing(0)

    window.addEventListener('mobileMenuOpened', () => lenis.stop());
    window.addEventListener('mobileMenuClosed', () => lenis.start());
  }

  document.addEventListener('astro:page-load', initLenis);
  initLenis();
</script>
