---
// Marquee.astro
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="bg-brutal-white overflow-hidden py-6 border-y border-brutal-black/10 flex items-center group">
  <div class="whitespace-nowrap flex font-heading font-bold text-xl md:text-3xl uppercase tracking-widest text-brutal-black/90 group-hover:[animation-play-state:paused] [animation-play-state:running]">
    <!-- Original Marquee Track -->
    <div class="animate-marquee inline-flex items-center pe-8 group-hover:[animation-play-state:paused]">
      <span class="mx-8 flex items-center gap-8">
        <svg viewBox="0 0 24 24" class="w-[0.9em] h-[0.9em] text-brutal-black relative top-[-4px] animate-[spin_4s_linear_infinite]" fill="currentColor">
          <path d="M12 2.5A1.5 1.5 0 0 1 13.5 4v5.402L18.178 6.7a1.5 1.5 0 0 1 1.5 2.598L15 12l4.678 2.701a1.5 1.5 0 0 1-1.5 2.598l-4.678-2.7V20a1.5 1.5 0 0 1-3 0v-5.402L5.822 17.3a1.5 1.5 0 1 1-1.5-2.598L9 12 4.322 9.299a1.5 1.5 0 0 1 1.5-2.598l4.678 2.7V4A1.5 1.5 0 0 1 12 2.5" />
        </svg> 
        {text}
        <span class="">—</span>
      </span>
      <span class="mx-8 flex items-center gap-8">
