---
// StudioTeam.astro
const team = [
  {
    name: "Oliver Bennett",
    role: "CEO, FOUNDER",
    img: "https://olmo-studio.vercel.app/_astro/oliver.D3l0muKa.webp"
  },
  {
    name: "Sophie Harrison",
    role: "MARKETING MANAGER",
    img: "https://olmo-studio.vercel.app/_astro/sophie.Dcx90bN2.webp"
  },
  {
    name: "Ethan Crawford",
    role: "LEAD DESIGNER",
    img: "https://olmo-studio.vercel.app/_astro/ethan.DfCpzPU3.webp"
  },
  {
    name: "Audrey Sinclair",
    role: "LEAD DEVELOPER",
    img: "https://olmo-studio.vercel.app/_astro/audrey.B-9Hz3Zl.webp"
  }
];
---

<section class="bg-brutal-white text-brutal-black py-32 px-4 md:px-8 border-b border-brutal-black/10">
  <div class="max-w-screen-2xl mx-auto">
    
    <div class="mb-12 md:mb-16 flex justify-between items-end">
      <h2 id="team-heading" class="font-heading font-black text-4xl md:text-6xl uppercase tracking-tighter leading-none opacity-0 translate-y-10">
        Design Experts
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8" id="team-grid">
      {team.map((member) => (
        <div class="team-card group cursor-pointer opacity-0 translate-y-10">
          
          <div class="w-full aspect-[3/4] overflow-hidden mb-6 relative">
            <div class="absolute inset-0 bg-brutal-black/10 z-10 transition-opacity duration-300 group-hover:opacity-0 mix-blend-overlay"></div>
            <img 
              src={member.img} 
              alt={member.name} 
              class="w-full h-full object-cover grayscale transition-all duration-700 group-hover:grayscale-0 group-hover:scale-105"
              loading="lazy"
            />
            {/* Social Overlay */}
            <div class="absolute inset-0 bg-brutal-orange/90 flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-20 translate-y-4 group-hover:translate-y-0">
               <a href="#" class="w-12 h-12 rounded-full bg-brutal-white text-brutal-orange flex items-center justify-center hover:scale-110 transition-transform">
                 <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
               </a>
               <a href="#" class="w-12 h-12 rounded-full bg-brutal-white text-brutal-orange flex items-center justify-center hover:scale-110 transition-transform">
                 <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
               </a>
            </div>
          </div>

          <h3 class="font-heading font-black text-xl md:text-2xl uppercase tracking-tight mb-1 group-hover:text-brutal-orange transition-colors">
            {member.name}
          </h3>
          <p class="font-body text-xs font-bold tracking-widest text-brutal-black/50 uppercase">
            {member.role}
          </p>
          
        </div>
      ))}
    </div>

  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initStudioTeam() {
    gsap.to('#team-heading', {
      scrollTrigger: {
        trigger: '#team-heading',
        start: "top 85%",
        toggleActions: "play none none reverse"
      },
      y: 0,
      opacity: 1,
      duration: 1,
      ease: "power3.out"
    });

    const cards = gsap.utils.toArray('.team-card');
    if (cards.length > 0) {
      gsap.to(cards, {
        scrollTrigger: {
          trigger: '#team-grid',
          start: "top 80%",
          toggleActions: "play none none reverse"
        },
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.15,
        ease: "back.out(1.2)"
      });
    }
  }

  document.addEventListener('astro:page-load', initStudioTeam);
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    initStudioTeam();
  } else {
    document.addEventListener('DOMContentLoaded', initStudioTeam);
  }
</script>
